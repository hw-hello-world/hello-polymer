{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "fragments": [
    "src/my-welcome.html",
    "src/my-button-dev-page.html",
    "src/my-button-page.html",
    "src/my-infobox-page.html",
    "src/my-checkbox-page.html",
    "src/my-icons.html",
    "src/my-view404.html",
    "src/o-button.html",
    "src/o-infobox.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
